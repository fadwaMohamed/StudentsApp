@model Department;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    @* same current url but with different method *@
    @*<form method="POST">*@
    <form asp-action="Edit" asp-controller="Department"> 
        <div class="container mt-5">
            <div class="row text-center">
                <div class="m-3 text-center row">
                    <label class="col-4 fw-bold">ID</label>
                    <input asp-for="DeptId" placeholder="ID" class="col-6 col-md-4" readonly value=@Model.DeptId />
                </div>
                <div class="m-3 text-center row">
                    <label class="col-4 fw-bold">Name</label>
                    <input asp-for="Name" placeholder="Name" class="col-6 col-md-4" value=@Model.Name />
                </div>
                <div class="m-3 text-center row">
                    <label class="col-4 fw-bold">Capacity</label>
                    <input asp-for="Capacity" placeholder="Capacity" class="col-6 col-md-4" value=@Model.Capacity />
                </div>
                <input type="submit" value="Edit" class="col-4 offset-4 btn btn-outline-info mt-4  col-md-2" />
            </div>
        </div>
    </form>
</body>
</html>
