@model IEnumerable<Department>;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="text-center">
        @*<a href="/Department/Create" class="btn btn-outline-info m-3">Add Department</a>*@
        @*@Html.ActionLink("Add Department", "Create", "Department", null, new { @class="btn btn-outline-info" })*@
        <a asp-action="Create" asp-controller="Department" class="btn btn-outline-info m-3"Add Department>Add Department</a>
    </div>

    @if(Model.Count() > 0)
    {
        <div class="container">
            <table class="table table-hover table-bordered">
              <thead class="bg-info text-white">
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Name</th>
                  <th scope="col">Capacity</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                @foreach(Department dept in Model)
                    {
                        <tr>
                          <td>@dept.DeptId</td>
                          <td>@dept.Name</td>
                          <td>@dept.Capacity</td>
                          <td>
                            <a asp-action="Edit" asp-controller="Department" asp-route-DeptId=@dept.DeptId class="btn btn-outline-info m-3 btn-sm">Edit</a>
                            <a asp-action="Delete" asp-controller="Department" asp-route-DeptId=@dept.DeptId class="btn btn-outline-info m-3 btn-sm">Delete</a>
                          </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</body>
</html>
