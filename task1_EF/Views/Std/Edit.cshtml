@model Student
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h5 class="border-bottom w-50 border-info py-2 mx-auto text-center">Add student</h5>
    <form method="POST" enctype="multipart/form-data"> 
        <input asp-for="Id" hidden />
        <div class="container mt-3">
            <div class="row text-center">
                <div class="m-3 text-center row">
                    <label asp-for="Name" class="col-5 fw-bold">Name</label>
                    <input asp-for="Name" placeholder="Name" class="col-7 col-md-4" />
                    <span asp-validation-for=Name class="mt-1"></span>
                </div>
                <div class="m-3 text-center row">
                    <label asp-for="Age" class="col-5 fw-bold">Age</label>
                    <input asp-for="Age" placeholder="Age" class="col-7 col-md-4" />
                    <span asp-validation-for=Age class="mt-1"></span>
                </div>
                <div class="m-3 text-center row">
                    <label asp-for="DeptNo" class="col-5 fw-bold">Department</label>
                    <select asp-for=DeptNo asp-items=@ViewBag.depts class="col-7 col-md-4"> </select>
                    <span asp-validation-for=DeptNo class="mt-1"></span>
                </div>
                <div class="m-3 text-center row">
                    <label asp-for="Email" class="col-5 fw-bold">Email</label>
                    <input asp-for="Email" placeholder="Email" class="col-7 col-md-4" />
                    <span asp-validation-for=Email class="mt-1"></span>
                </div>
                <input asp-for="Password" value=@Model.Password hidden />
                <input asp-for="CPassword" value=@Model.Password hidden />
                <input asp-for="UserName" value=@Model.UserName hidden />
                <input asp-for="StdImg" value=@Model.StdImg hidden />

                <input type="submit" value="Edit" class="col-2 offset-5 btn btn-outline-info my-4 col-md-2" />
            </div>
        </div>
    </form>
 
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
