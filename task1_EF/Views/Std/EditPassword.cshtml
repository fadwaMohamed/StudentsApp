@model PasswordViewModel 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditPassword</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h5 class="border-bottom w-50 border-info py-2 mx-auto text-center">Add student</h5>
    <form method="POST" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <div class="container mt-3">
            <div class="row text-center">
                <div class="m-3 text-center row">
                    <label asp-for="Password" class="col-5 fw-bold">Password</label>
                    <input asp-for="Password" placeholder="Password" type="password" class="col-7 col-md-4" />
                    <span asp-validation-for=Password class="mt-1"></span>
                </div>
                <div class="m-3 text-center row">
                    <label asp-for="CPassword" class="col-5 fw-bold">CPassword</label>
                    <input asp-for="CPassword" placeholder="CPassword" type="password" class="col-7 col-md-4" />
                    <span asp-validation-for=CPassword class="mt-1"></span>
                </div>
                <div class="m-3 text-center row">
                    <label asp-for="UserName" class="col-5 fw-bold">UserName</label>
                    <input asp-for="UserName" placeholder="UserName" class="col-7 col-md-4" />
                    <span asp-validation-for=UserName class="mt-1"></span>
                </div>
                <input type="submit" value="Save" class="col-2 offset-5 btn btn-outline-info my-4 col-md-2" />
            </div>
        </div>
    </form>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
